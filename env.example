# Estimator Assistant MCP - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# Base URL for the application
BASE_URL=http://localhost:3000

# Application environment
NODE_ENV=development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Primary database URL (PostgreSQL with pgvector)
DATABASE_URL=postgresql://username:password@localhost:5432/estimator_assistant

# EA-specific database URL (overrides DATABASE_URL if set)
EA_DATABASE_URL=postgresql://username:password@localhost:5432/estimator_assistant

# =============================================================================
# GOOGLE CLOUD PLATFORM (GCP) CONFIGURATION
# =============================================================================

# GCP Project ID
EA_GCP_PROJECT_ID=your-gcp-project-id

# GCP Region
EA_GCP_REGION=us-central1

# Google Cloud Storage bucket for file uploads
EA_GCS_BUCKET_NAME=estimator-assistant-files

# =============================================================================
# AI/LLM CONFIGURATION
# =============================================================================

# OpenAI API Key (required for embeddings and LLM)
OPENAI_API_KEY=sk-your-openai-api-key

# Embedding model (text-embedding-3-large or text-embedding-3-small)
EA_EMBEDDING_MODEL=text-embedding-3-large

# Transcription model (for voice notes)
EA_TRANSCRIPTION_MODEL=whisper-1

# Explainer agent model
EA_EXPLAINER_MODEL=gpt-4o

# =============================================================================
# GOOGLE WORKSPACE INTEGRATION
# =============================================================================

# Google OAuth credentials
EA_GOOGLE_CLIENT_ID=your-google-client-id
EA_GOOGLE_CLIENT_SECRET=your-google-client-secret

# Google API Key (for Maps and other services)
EA_GOOGLE_API_KEY=your-google-api-key

# =============================================================================
# =============================================================================
# GOOGLE MAPS INTEGRATION
# =============================================================================

# Google Maps API Key (for travel distance and location modifiers)
EA_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# Better Auth secret (generate a secure random string)
BETTER_AUTH_SECRET=your-super-secure-secret-key-here

# Better Auth URL (usually same as BASE_URL)
BETTER_AUTH_URL=http://localhost:3000

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================

# File storage driver (vercel-blob, s3, or gcs)
FILE_STORAGE_TYPE=gcs

# AWS S3 Configuration (if using S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket

# =============================================================================
# REDIS CONFIGURATION (for caching)
# =============================================================================

# Redis URL (optional, for caching)
REDIS_URL=redis://localhost:6379

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Disable HTTPS in development
NO_HTTPS=1

# Enable debug logging
DEBUG=estimator-assistant:*

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Vercel deployment settings
VERCEL=1
VERCEL_ENV=production
VERCEL_URL=your-app.vercel.app

# =============================================================================
# MCP CONFIGURATION
# =============================================================================

# Use file-based MCP config (for development)
FILE_BASED_MCP_CONFIG=true

# MCP server remote only (for production)
IS_MCP_SERVER_REMOTE_ONLY=false

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test database URL
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/estimator_assistant_test

# Test environment flag
NODE_ENV=test

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable structured logging
STRUCTURED_LOGGING=true

# =============================================================================
# RATE LIMITING & PERFORMANCE
# =============================================================================

# Maximum file upload size (in bytes)
MAX_FILE_SIZE=10485760

# Maximum number of concurrent embeddings
MAX_CONCURRENT_EMBEDDINGS=5

# Embedding batch size
EMBEDDING_BATCH_SIZE=10

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable voice transcription
ENABLE_VOICE_TRANSCRIPTION=true

# Enable Google Workspace integration
ENABLE_GOOGLE_WORKSPACE=true

# Enable Maps integration
ENABLE_MAPS=true

# Enable vector search
ENABLE_VECTOR_SEARCH=true
